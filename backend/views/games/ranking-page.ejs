  <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">

  <style>
    :root {
      --body-font: 'Roboto', sans-serif;
      --body-alt-font: 'Chakra Petch', sans-serif;
      --body-color: #fff;
      --para-color: #64BE56;
      --para-alt-color: #00FADF;
      --body-bg: #0E063D;
    }

    body {
    }

    section{
        margin: 6rem 0;
    }

    a{
        text-decoration: none;
    }

    .section-header{
        color: black;
        margin-bottom: 2rem;
    }

    .title{
  font-weight: 800;
  text-transform: uppercase;
  margin-bottom: 10px;
  font-size: 40px;
    }

    .card-title{
        color: var(--body-color);
  text-transform: uppercase;
  font-weight: 700;
  font-size: 26px;

}

.card-para{

    color: white;
}
    .main-container{
        box-shadow: 0 3px 10px rgb(0 0 0 / 0.2);
  border-radius: 20px;
  padding: 25px 100px 0;
  margin-bottom: -8px;
  padding-bottom: 50px;
    }

    .game-card{

        width: 260px;
  height: 180px;
  background: #DAC0A32E;
  border-radius: 10px;
  padding: 1rem;
  box-shadow: 0 2.8px 2.2px rgba(0, 0, 0, 0.034), 0 6.7px 5.3px rgba(0, 0, 0, 0.048), 0 12.5px 10px rgba(0, 0, 0, 0.06), 0 22.3px 17.9px rgba(0, 0, 0, 0.072), 0 41.8px 33.4px rgba(0, 0, 0, 0.086), 0 100px 80px rgba(0, 0, 0, 0.12);

    }

    .cmn-btn {
  position: relative;
  text-transform: uppercase;
  font-weight: 500;
  font-size: 18px;
  line-height: 27px;
  transition: all 0.5s;
  padding: 11px 32px;
  background: linear-gradient(351.09deg, #F0B000 4.36%, #F029A0 117.5%);
  box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.25);
  border-radius: 25px;
  overflow: hidden;
  z-index: 0;
  border: none;
  color: var(--body-color);
  text-decoration: none;
  margin: 2rem 1rem;
}

.games-cards-box{
    display: flex;
  gap: 35px;
}

.btn-box{
    text-align: center;
}

.points-box{
  color: var(--body-color);
  font-weight: 600;
  border-radius: 8px;
  background: linear-gradient(351.09deg, #F0B000 4.36%, #F029A0 117.5%);
  padding: 2px 0px;
  height: 60px;
  justify-content: space-around;
  display: flex;
  align-items: center;
}

hr:not([size]) {
  height: 1px;
  background: black;
}
    

    #header-section.header-fixed {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 9999;
  background-color: #00003E;
  box-shadow: 0px 3px 10px 0px rgb(0 0 0 / 30%);
  border-bottom: 1px solid rgb(255 255 255 / 25%);
}


  </style>


  
    <style>

.ladder-nav {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      background: #5055CB;
      padding: 10px 25px;
      border-radius: 10px;
      border: 1px solid #686EF9;
    }

    .ladder-title {
      flex: 2;
    }

    .ladder-nav--col:nth-child(n+2) {
      flex: 1;
    }

    .ladder-nav h1 {
      margin-bottom: 0px;
      line-height: 1;
    }

    .ladder-nav h1,
    .bracket-title {
      font-size: 20px;
      color: #888DFF !important;
      font-weight: bold;
      text-transform: uppercase;
    }

    .bracket-title ul,
    .bracket-title li {
      display: inline;
    }

    /* Results Nav */
    .ladder-nav--results,
    .ladder-nav--results-players {
      display: grid;
      grid-template-columns: 60% 20% 20%;
      padding: 15px 25px;
      box-shadow: 0 3px 10px rgb(0 0 0 / 0.2);
      color:black;
    }

    .ladder-nav--results label {

      font-size: 18px;
      font-weight: bold;
    }

    .ladder-nav--results-col,
    .results-col {
      flex: 1;
    }

    .ladder-nav--results {
      margin: 5px 0px;
      background: #FEB628;
    }

    .ladder-nav--results-players {
      align-items: center;
    }

    .scrims-ladder .ladder-nav--results-players:nth-of-type(1) {
      color: #686EF9;
    }

    .results-col {
      font-size: 18px;
      font-weight: 700;
    }

    .results-rank {
      display: block;
      background: #686EF9;
      font-weight: bold;
      width: 34px;
      height: 34px;
      text-align: center;
      border-radius: 50%;
    }

    .positions {
      vertical-align: middle;
    }

    .ladder-nav input[type=text]:focus {
      border: 1px solid #888DFF;
    }

    .ladder-search {
      background: #5E64F1;
      color: white !important;
    }

    .ladder-search::-webkit-input-placeholder {
      /* Chrome/Opera/Safari */
      color: #888DFF;
    }

    .ladder-search::-moz-placeholder {
      /* Firefox 19+ */
      color: #888DFF;
    }

    .ladder-search:-ms-input-placeholder {
      /* IE 10+ */
      color: #888DFF;
    }

    .ladder-search:-moz-placeholder {
      /* Firefox 18- */
      color: #888DFF;
    }

    .rank,
    .score {
      text-align: end;
    }


           @media screen and (max-width: 568px) {
          .main-container {
  
  box-shadow: 0 3px 10px rgb(0 0 0 / 0.2);
  border-radius: 20px;
  padding: 1rem;
    padding-bottom: 0px;
  margin-bottom: -8px;
  padding-bottom: 50px;
}

.section-header {
  color: black;
  margin-bottom: 2rem;
  display: grid;
  grid-template-columns: 100%;
}

.results-col {
  font-size: 12px;
  font-weight: 700;
}

.ladder-nav--results, .ladder-nav--results-players {
  display: grid;
  grid-template-columns: 70% 15% 15%;
  padding: 15px ;
}

.results-col img{
  width: 30px !important;
  margin-right: 5px !important;
}

.ladder-nav--results label {
  font-size: 12px;
  font-weight: bold;
}

        }
    </style>
</head>

<body>
   <%- include('../partials/header.ejs') -%>

<section id="available-game-section">
        <div class="overlay pb-120">
            <div class="container wow fadeInUp" style="visibility: visible; animation-name: fadeInUp;">
                <div class="main-container">

                    <div class="row justify-content-between">
                        <div class="">
                            <div class="section-header">
                                <h2 class="title">Ranking</h2>
                                <hr>
                            </div>
                        </div>
                    </div>


                    <div id="scrims-ladder--container" class="scrims-ladder">

                        <div class="ladder-nav--results">
                          <div class="ladder-nav--results-col name">
                            <label>NAME</label>
                          </div>
              
                          <div class="ladder-nav--results-col rank">
                            <label>RANK</label>
                          </div>
                          <div class="ladder-nav--results-col score">
                            <label>SCORE</label>
                          </div>
                        </div>
                        <!-- player starts -->
                        <% var rank=1;%>
                        <% for( i=0; i < sortedUsers.length; i++) { %>
              
                        <div class="ladder-nav--results-players">
                          <div class="results-col">
                              <img width="43px" style="margin: 0 18px 0 0px;" src="/static/images/profile.png" alt="">

                              <%= sortedUsers[i].name %> - [ <%= sortedUsers[i].challengers %> ]
                          </div>
                          <div class="results-col rank">
                            <span class="results-gp">
                              <%= rank %>
                            </span>
                          </div>
                          <div class="results-col score">
                            <span class="results-pts">
                              <%= sortedUsers[i].total %>
                            </span>
                          </div>
                        </div>
                        <% rank++ ; %>
                        <% } %>
                        <!-- JS Loop -->
              
                      </div>

                </div>
                
            </div>
        </div>
    </section>


    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js" integrity="sha384-cuYeSxntonz0PPNlHhBs68uyIAVpIIOZZ5JqeqvYYIcEL727kskC66kF92t6Xl2V" crossorigin="anonymous"></script>
    
</body>

</html>