  <style>
    :root {
      --body-font: 'Roboto', sans-serif;
      --body-alt-font: 'Chakra Petch', sans-serif;
      --body-color: #fff;
      --para-color: #64BE56;
      --para-alt-color: #00FADF;
      --body-bg: #0E063D;
    }

    section{
        margin: 6rem 0;
    }

    .section-header{
        color: black;
        margin-bottom: 2rem;
        display: grid;
        grid-template-columns: 50% 50%;
    }

    .title{
  font-weight: 800;
  text-transform: uppercase;
  margin-bottom: 10px;
  font-size: 40px;
    }

    .card-title{
        color: var(--body-color);
  text-transform: uppercase;
  font-weight: 700;
  font-size: 26px;

}

.card-para{

    color: white;
}

    .main-container{
        /* background: linear-gradient(178.07deg, #4609C3 -9.74%, #0E063DED 95%); */
  box-shadow: 0 3px 10px rgb(0 0 0 / 0.2);
  border-radius: 20px;
  padding: 25px 100px 0;
  margin-bottom: -8px;
  padding-bottom: 50px;
    }

    .game-card{
        width: 260px;
        height: 180px;
        background: #444;
        border-radius: 10px;
        padding: 1rem;
    }

    .cmn-btn {
  position: relative;
  text-transform: uppercase;
  font-weight: 500;
  font-size: 18px;
  line-height: 27px;
  transition: all 0.5s;
  padding: 11px 32px;
  background: linear-gradient(351.09deg, #FDD231 4.36%, #F0B000 117.5%);
  box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.25);
  border-radius: 25px;
  overflow: hidden;
  z-index: 0;
  border: none;
  color: var(--body-color);
  text-decoration: none;
  margin: 2rem 1rem;
}

.games-cards-box{
    display: flex;
  gap: 35px;
}

.btn-box{
    text-align: center;
}

.points-box{
    color: var(--body-color);
    font-weight: 600;
    border-radius: 8px;
  background: #FDD23199;
  padding: 2px 0px;
  height: 60px;
  justify-content: space-around;
  display: flex;
  align-items: center;
}

hr:not([size]) {
  height: 1px;
  background: black;
}

iframe {
  border-radius: 18px;
  height: 400px;
  border: 2px solid black;
  background-color: black;
}

.para-text{
    font-size:18px;
    margin: 1rem 0;
}
    
  </style>


    <style>

.ladder-nav {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      background: #5055CB;
      padding: 10px 25px;
      border-radius: 10px;
      border: 1px solid #686EF9;
    }

    .ladder-title {
      flex: 2;
    }

    .ladder-nav--col:nth-child(n+2) {
      flex: 1;
    }

    .ladder-nav h1 {
      margin-bottom: 0px;
      line-height: 1;
    }

    .ladder-nav h1,
    .bracket-title {
      font-size: 20px;
      color: #888DFF !important;
      font-weight: bold;
      text-transform: uppercase;
    }

    .bracket-title ul,
    .bracket-title li {
      display: inline;
    }

    /* Results Nav */
    .ladder-nav--results,
    .ladder-nav--results-players {
        display: grid;
  grid-template-columns: 60% 20% 20%;
      padding: 15px 25px;
      box-shadow: 0 3px 10px rgb(0 0 0 / 0.2); 
           color:black
    }

    .ladder-nav--results label {

      font-size: 18px;
      font-weight: bold;
    }

    .ladder-nav--results-col,
    .results-col {
      flex: 1;
    }

    .ladder-nav--results {
      margin: 5px 0px;
      background: #FEB628;
    }

    .ladder-nav--results-players {
      margin: 5px 0px;
      align-items: center;
    }

    .scrims-ladder .ladder-nav--results-players:nth-of-type(1) {
      color: #686EF9;
    }

    .results-col {
      font-size: 18px;
      font-weight: 700;
    }

    .results-rank {
      display: block;
      background: #686EF9;
      font-weight: bold;
      width: 34px;
      height: 34px;
      text-align: center;
      border-radius: 50%;
    }

    .positions {
      vertical-align: middle;
    }

    .ladder-nav input[type=text]:focus {
      border: 1px solid #888DFF;
    }

    .ladder-search {
      background: #5E64F1;
      color: white !important;
    }

    .ladder-search::-webkit-input-placeholder {
      /* Chrome/Opera/Safari */
      color: #888DFF;
    }

    .ladder-search::-moz-placeholder {
      /* Firefox 19+ */
      color: #888DFF;
    }

    .ladder-search:-ms-input-placeholder {
      /* IE 10+ */
      color: #888DFF;
    }

    .ladder-search:-moz-placeholder {
      /* Firefox 18- */
      color: #888DFF;
    }

    .rank,
    .score {
      text-align: end;
    }


        @media screen and (max-width: 568px) {
          .main-container {
  
  box-shadow: 0 3px 10px rgb(0 0 0 / 0.2);
  border-radius: 20px;
  padding: 1rem;
    padding-bottom: 0px;
  margin-bottom: -8px;
  padding-bottom: 50px;
}

.section-header {
  color: black;
  margin-bottom: 2rem;
  display: grid;
  grid-template-columns: 100%;
}

.results-col {
  font-size: 12px;
  font-weight: 700;
}

.ladder-nav--results, .ladder-nav--results-players {
  display: grid;
  grid-template-columns: 70% 15% 15%;
  padding: 15px ;
}


.ladder-nav--results label {
  font-size: 12px;
  font-weight: bold;
}

        }
    </style>
</head>

<body>

    <%- include('../partials/header.ejs') -%>
 <section id="available-game-section">
        <div class="overlay pb-120">
            <div class="container wow fadeInUp" style="visibility: visible; animation-name: fadeInUp;">
                <div class="main-container">

                    <div class="row justify-content-between">
                        <div class="col-lg-10">
                            <div class="section-header">
                            <div>
                                <iframe title="Kinect Competition in Office | Fun at MindYourLogic Office #mindyourlogic" src="<%=gamesData[0].video_link%>" width="320" height="560" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen="allowfullscreen"></iframe>
                            </div>
                            <div>
                            <h5 class="title"><%=gamesData[0].game_name%></h5><hr>
                            <p class="para-text"><%=gamesData[0].description%></p>
                            </div>

    
                            </div>
                        </div>
                    </div>

                  


                    <h5 class="title my-4">Ranking</h5>
                    <hr>

                    <div id="scrims-ladder--container" class="scrims-ladder">

                        <div class="ladder-nav--results">
                          <div class="ladder-nav--results-col name">
                            <label>NAME</label>
                          </div>
              
                          <div class="ladder-nav--results-col rank">
                            <label>RANK</label>
                          </div>
                          <div class="ladder-nav--results-col score">
                            <label>SCORE</label>
                          </div>
                        </div>
                        <!-- player starts -->
                        <% var rank=1;%>
                        <% for( i=0; i < ranksData.length; i++) { %>
              
                        <div class="ladder-nav--results-players">
                          <div class="results-col">
                            <img width="43px" style="margin: 0 18px 0 0px;" src="/static/images/profile.png" alt="">
                              <%= ranksData[i].name %> - [ <%= ranksData[i].challengers %> ]
                          </div>
                          <div class="results-col rank">
                            <span class="results-gp">
                              <%= rank %>
                            </span>
                          </div>
                          <div class="results-col score">
                            <span class="results-pts">
                              <%= ranksData[i].score %>
                            </span>
                          </div>
                        </div>
                        <% rank++ ; %>
                        <% } %>
                        <!-- JS Loop -->
              
                      </div>



                </div>
                
            </div>
        </div>
    </section>





  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js" integrity="sha384-cuYeSxntonz0PPNlHhBs68uyIAVpIIOZZ5JqeqvYYIcEL727kskC66kF92t6Xl2V" crossorigin="anonymous"></script>

</body>

</html>