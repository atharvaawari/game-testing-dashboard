  async function appendDataToTable(data, tableId, templateFunction) {

      const table = document.querySelector(`#${tableId} tbody`)

      data.forEach(item => {

        const row = templateFunction(item);
        table.innerHTML += row

      });

    }

    function toggleBody(emailId) {
      const body = document.getElementById('body' + emailId);

      body.classList.toggle('show');
    }

    function markAttendance() {

      submitData({
          "key": "value"
        }, 'mark-attendance',
        async function showMessagePopup(message) {

          const attendanceBtn = document.getElementById('attendance-btn-box')

          if (message == 'Attendance marked') {

            attendanceBtn.innerHTML = `
            <button class="btn btn-success attendance-btn ms-3" >
            <span>Attendance marked</span>
            </button>
          
          `
          }

          const popup = document.createElement("div");
          popup.style.position = "fixed";
          popup.style.top = "20px";
          popup.style.right = "20px";
          popup.style.padding = "10px";
          popup.style.backgroundColor = "rgba(0,0,0,0.8)";
          popup.style.color = "white";
          popup.style.borderRadius = "5px";
          popup.style.zIndex = 1000; // to ensure it appears above other elements
          popup.innerText = message;

          document.body.appendChild(popup);

          // Wait for 5 seconds using a promise
          await new Promise((resolve) => setTimeout(resolve, 5000));

          // Remove the message pop-up
          popup.remove();

        });

    }

    async function getAttendance() {

      const attendance_status = await fetchData('/get-attendance');
      const attendanceBtn = document.getElementById('attendance-btn-box');
      

      if (attendance_status.data.length > 0) {

        attendanceBtn.innerHTML = `
        <button class="btn btn-success attendance-btn ms-3" >
        <span>Attendance marked</span>
        </button>
      <button class="btn btn-outline-dark" id="emp-not-like-idea">${attendance_status.countUsersWithNoLikes.length}</button>
      `
      } else {

        attendanceBtn.innerHTML = `
        <button class="btn btn-danger attendance-btn ms-3" onclick="markAttendance()">
        <span>Mark Attendance</span>
        </button>
      <button class="btn btn-outline-dark" id="emp-not-like-idea">${attendance_status.countUsersWithNoLikes.length}</button>
      `
      }

    }

    async function fetchData(url) {
      try {
        const response = await fetch(url);

        if (!response.ok) {
          throw new Error('Network response was not ok');
        }

        const data = await response.json();

        return data;
      } catch (error) {
        throw error;
      }
    }
